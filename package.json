{
  "name": "factory.io",
  "version": "0.0.1",
  "description": "Typescript test data factory based on preexisting classes or interfaces",
  "keywords": [
    "factory",
    "class",
    "test",
    "fixtures"
  ],
  "main": "lib/index.js",
  "typings": "lib/index",
  "files": [
    "lib/"
  ],
  "author": "Krzysztof Olipra",
  "license": "MIT",
  "repository": "https://github.com/Nalhin/factory.io",
  "scripts": {
    "build": "tsc -p tsconfig.build.json --outDir lib",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" README.md",
    "test": "jest",
    "test:cov": "jest --coverage",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix && tsc --p tsconfig.build.json --emitDeclarationOnly",
    "publish": "npm run build && npm login && npm publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.+(ts|graphql)": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@types/deepmerge": "^2.2.0",
    "@types/faker": "^4.1.11",
    "@types/jest": "^25.2.1",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "faker": "^4.1.0",
    "husky": "^4.2.5",
    "jest": "^25.4.0",
    "lint-staged": "^10.1.7",
    "prettier": "^2.0.5",
    "ts-jest": "^25.4.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "deepmerge": "^4.2.2"
  }
}
